<% i=0 %>

<div class="row">

<% @products.each do |product|  i+=1 %>


	<%if i%3 == 1 %><div class="row"> <% end %>

		<div class="col-lg-4 col-md-6 mb-4">
			<div class="card h-100">
				<a href="<%= product_path(product.id) %>"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
				<div class="card-body">
				
					<h4 class="card-title">
						<a href="<%= product_path(product.id) %>"><%= product.title %></a>
					</h4>
					
					<h5><%= product.title %></h5>
					
					<p class="card-text"> <%=product.description%> </p>
					
				</div>
				<div class="card-footer">
					<small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
				</div>
			</div>
		</div>

<% if i%3 == 0 %> </div> <% end %>

<% end %>